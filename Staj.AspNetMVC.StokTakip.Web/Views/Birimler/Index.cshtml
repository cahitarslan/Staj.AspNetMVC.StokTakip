@model List<Staj.AspNetMVC.StokTakip.Web.Models.Entities.Birimler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="bg-dark my-5 mx-auto">
    <div class="card shadow-lg mt-2" style="border:0">
        <div class="card-header bg-dark">
            <h2 style="color:#e9d362;">Birim Listesi</h2>
        </div>
        <div class="card-body bg-dark">
            <table class="table table-bordered table-hover table-dark table-responsive">
                <thead class="text-center text-white">
                    <tr>
                        <th>Id</th>
                        <th>Birim Adı</th>
                        <th>Açıklama</th>
                        <th colspan="2">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.BirimAdi</td>
                            <td>@item.Aciklama</td>
                            <td>
                                <a href="/Birimler/BirimSilmeGetir/@item.Id" class="btn btn-outline-danger">Sil</a>
                            </td>
                            <td>
                                <a href="/Birimler/BirimGuncellemeGetir/@item.Id" class="btn btn-outline-warning">Güncelle</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <a href="/Birimler/BirimEkle/" class="btn btn-outline-primary mt-1 float-left">Birim Ekle</a>


        </div>
    </div>
</div>