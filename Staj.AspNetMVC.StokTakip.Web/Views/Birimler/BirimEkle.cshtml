@model Staj.AspNetMVC.StokTakip.Web.Models.Entities.Birimler
@{
    ViewBag.Title = "BirimEkle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="bg-dark w-50 my-5 mx-auto">
    <div class="card shadow-lg mt-3" style="border:0">
        <div class="card-header bg-dark">
            <h2 style="color:#e9d362;">Birim Ekle</h2>
        </div>
        <div class="card-body bg-dark text-info">

            @using (Html.BeginForm("BirimEkle", "Birimler", FormMethod.Post))
            {
                <div class="form-group">
                    @Html.LabelFor(I => I.BirimAdi)
                    @Html.TextBoxFor(I => I.BirimAdi, new { @class = "form-control" })
                    @Html.ValidationMessageFor(I => I.BirimAdi, null, new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(I => I.Aciklama)
                    @Html.TextAreaFor(I => I.Aciklama, new { @class = "form-control" })
                    @Html.ValidationMessageFor(I => I.Aciklama, null, new { @class = "text-danger" })
                </div>
                <div>
                    <button class="btn btn-success">Kaydet</button>
                    <a class="btn btn-danger float-right" href="/Birimler/Index/">İptal</a>

                </div>
            }
        </div>
    </div>
</div>

@section scriptdanger{
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
}

