@model Staj.AspNetMVC.StokTakip.Web.Models.Entities.Kategoriler
@{
    ViewBag.Title = "KategoriSilmeGetir";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="bg-dark w-25 my-5 mx-auto">
    <div class="card shadow-lg mt-3" style="border:0">
        <div class="card-header bg-dark">
            <h2 style="color:#e9d362;">Kategori Sil</h2>
        </div>
        <div class="card-body bg-dark text-info">
            @using (Html.BeginForm("KategoriSil", "Kategoriler"))
            {
                <div class="form-group">
                    @Html.HiddenFor(I => I.Id)
                    @Html.LabelFor(I => I.KategoriAdi): 
                    <span class="text-light">@Html.DisplayFor(I => I.KategoriAdi, new { @class = "form-control" })</span>
                </div>
                <div class="form-group">
                    @Html.LabelFor(I => I.Aciklama): 
                    <span class="text-light">@Html.DisplayFor(I => I.Aciklama, new { @class = "form-control" })</span>
                </div>
                <h5 class="text-primary mt-5 mb-4">Kayıt silinsin mi?</h5>
                <div class="form-group">
                    <button class="btn btn-danger">Sil</button> <a class="btn btn-secondary float-right" href="/Kategoriler/Index/">İptal</a>
                </div>
            }

        </div>
    </div>
</div>

