@model List<Staj.AspNetMVC.StokTakip.Web.Models.Entities.Kategoriler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="bg-dark my-5 mx-auto">
    <div class="card shadow-lg mt-2" style="border:0">
        <div class="card-header bg-dark">
            <h2 style="color:#e9d362;">Kategori Listesi</h2>
        </div>
        <div class="card-body bg-dark">
            <table class="table table-bordered table-hover table-dark table-responsive">
                <thead class="text-center text-white">
                    <tr>
                        <th>Id</th>
                        <th>Kategori Adı</th>
                        <th>Açıklama</th>
                        <th colspan="4">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.KategoriAdi</td>
                            <td>@item.Aciklama</td>
                            <td>
                                <a href="/Kategoriler/KategoriSilmeGetir/@item.Id" class="btn btn-outline-danger">Sil</a>
                            </td>
                            <td>
                                <a href="/Kategoriler/KategoriGuncellemeGetir/@item.Id" class="btn btn-outline-warning">Güncelle</a>
                            </td>
                            <td>
                                <a href="/Kategoriler/Markalar/@item.Id" class="btn btn-outline-secondary">Markalar</a>
                            </td>
                            <td>
                                <a href="/Kategoriler/Urunler/@item.Id" class="btn btn-outline-info">Ürünler</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            @if (User.IsInRole("Admin"))
            {
                <a href="/Kategoriler/KategoriEkle" class="btn btn-outline-primary mt-1 float-left">Kategori Ekle</a>
            }

        </div>
    </div>
</div>




