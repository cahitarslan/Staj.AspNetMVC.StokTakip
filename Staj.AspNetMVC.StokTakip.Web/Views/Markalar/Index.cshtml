@model List<Staj.AspNetMVC.StokTakip.Web.Models.Entities.Markalar>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="bg-dark my-5 mx-auto">
    <div class="card shadow-lg mt-2" style="border:0">
        <div class="card-header bg-dark">
            <h2 style="color:#e9d362;">Marka Listesi</h2>
        </div>
        <div class="card-body bg-dark">

            <table class="table table-bordered table-hover table-dark table-responsive">
                <thead class="text-center text-white">
                    <tr>
                        <th>Id</th>
                        <th>Kategori</th>
                        <th>Marka</th>
                        <th>Açıklama</th>
                        <th colspan="3">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Kategoriler.KategoriAdi</td>
                            <td>@item.MarkaAdi</td>
                            <td>@item.Aciklama</td>
                            <td>
                                <a href="/Markalar/MarkaSilmeGetir/@item.Id" class="btn btn-outline-danger">Sil</a>
                            </td>
                            <td>
                                <a href="/Markalar/MarkaGuncellemeGetir/@item.Id" class="btn btn-outline-warning">Güncelle</a>
                            </td>
                            <td>
                                <a href="/Markalar/Urunler/@item.Id" class="btn btn-outline-info">Ürünler</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <a href="/Markalar/MarkaEkle" class="btn btn-outline-primary">Marka Ekle</a>

        </div>
    </div>
</div>